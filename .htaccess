RewriteEngine On

# Permitir acceso a recursos estáticos
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg)$ [NC]

# Permitir acceso desde el formulario a la página de gracias
RewriteCond %{HTTP_REFERER} !^https://formsubmit\.co [NC]
RewriteCond %{REQUEST_URI} !^/$
# Redirigir todo lo demás a la página principal
RewriteRule ^(.*)$ / [R=301,L]

# Prevenir listado de directorios
Options -Indexes

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Asegurar que www.dominio.com redirige a dominio.com
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Remover .html de las URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Redirigir /index a /
RewriteRule ^index$ / [R=301,L]
RewriteRule ^index.html$ / [R=301,L]

# Establecer página de error 404 personalizada
ErrorDocument 404 /404.html 