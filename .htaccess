RewriteEngine On

# Permitir acceso a recursos estáticos necesarios
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|ico|svg)$ [NC]
RewriteCond %{REQUEST_URI} !^/$
RewriteCond %{REQUEST_URI} !^/index\.html$

# Bloquear todo lo demás con error 403 (Forbidden)
RewriteRule ^ - [F]

# Redirigir /index.html a /
RewriteRule ^index\.html$ / [R=301,L]

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Asegurar que www.dominio.com redirige a dominio.com
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Prevenir listado de directorios
Options -Indexes

# Denegar acceso a .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Establecer página de error 404 personalizada
ErrorDocument 404 /404.html 